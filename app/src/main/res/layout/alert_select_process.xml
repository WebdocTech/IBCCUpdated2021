<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Alert_Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_equivalence_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Equivalence"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_13"
            app:layout_constraintBottom_toBottomOf="@+id/tv_attestation_process"
            app:layout_constraintEnd_toEndOf="@+id/iv_equivalence_process"
            app:layout_constraintStart_toStartOf="@+id/iv_equivalence_process"
            app:layout_constraintTop_toBottomOf="@+id/iv_equivalence_process" />

        <ImageView
            android:id="@+id/iv_equivalence_process"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_equivalence_process"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_attestation_process"
            app:layout_constraintTop_toTopOf="@+id/iv_attestation_process"
            app:srcCompat="@drawable/equ"
            android:padding="15dp"
            android:background="@color/myAppSecondColor"/>

        <TextView
            android:id="@+id/tv_attestation_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Attestation"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_attestation_process"
            app:layout_constraintStart_toStartOf="@+id/iv_attestation_process"
            app:layout_constraintTop_toBottomOf="@+id/iv_attestation_process" />

        <ImageView
            android:id="@+id/iv_attestation_process"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_attestation_process"
            app:layout_constraintDimensionRatio="w,3:1"
            app:layout_constraintEnd_toStartOf="@+id/iv_equivalence_process"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:srcCompat="@drawable/attestation"
            android:background="@color/myAppSecondColor"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Pick an option"
            android:textAllCaps="true"
            android:textColor="@color/dark_TextColor"
            android:textSize="@dimen/textSize_20"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>